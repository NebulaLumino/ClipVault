generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PlatformType {
  steam
  riot
  epic
  discord
  faceit
}

enum AccountLinkStatus {
  pending
  linked
  expired
  error
}

enum GamePlatform {
  cs2
  lol
  dota2
  fortnite
}

enum MatchStatus {
  detected
  processing
  completed
  failed
  expired
}

enum ClipStatus {
  requested
  processing
  ready
  delivered
  failed
  expired
}

enum ClipType {
  highlight
  play_of_the_game
  moment
  kill
  death
  assist
  ace
  clutch
}

enum DeliveryMethod {
  dm
  channel
}

enum DeliveryStatus {
  pending
  sent
  failed
}

model User {
  id          String   @id @default(cuid())
  discordId   String   @unique
  username    String?
  globalName  String?
  avatarUrl   String?
  preferences Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  linkedAccounts LinkedAccount[]
  matches        MatchRecord[]
  clips          ClipRecord[]
  deliveries     DeliveryRecord[]

  @@index([discordId])
}

model LinkedAccount {
  id                String            @id @default(cuid())
  userId            String
  platform          PlatformType
  platformAccountId String
  platformUsername  String?
  status            AccountLinkStatus @default(pending)
  accessToken       String?
  refreshToken      String?
  tokenExpiry       DateTime?
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  pollState PollState?

  @@unique([userId, platform])
  @@index([platform, platformAccountId])
}

model PollState {
  id              String   @id @default(cuid())
  linkedAccountId String   @unique
  lastMatchId     String?
  lastCheckedAt   DateTime @default(now())
  pollingEnabled  Boolean  @default(true)

  linkedAccount LinkedAccount @relation(fields: [linkedAccountId], references: [id], onDelete: Cascade)

  @@index([lastCheckedAt])
}

model MatchRecord {
  id              String       @id @default(cuid())
  userId          String
  platform        PlatformType
  gameTitle       GamePlatform
  matchId         String
  platformMatchId String
  status          MatchStatus  @default(detected)
  startedAt       DateTime?
  endedAt         DateTime?
  metadata        Json?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  user  User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  clips ClipRecord[]

  @@unique([platform, platformMatchId])
  @@index([userId, status])
  @@index([createdAt])
}

model ClipRecord {
  id            String     @id @default(cuid())
  matchId       String
  userId        String
  allstarClipId String
  type          ClipType
  title         String?
  thumbnailUrl  String?
  videoUrl      String?
  duration      Int?
  status        ClipStatus @default(requested)
  requestedAt   DateTime?
  readyAt       DateTime?
  deliveredAt   DateTime?
  metadata      Json?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  match      MatchRecord      @relation(fields: [matchId], references: [id], onDelete: Cascade)
  user       User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  deliveries DeliveryRecord[]

  @@unique([allstarClipId])
  @@index([userId, status])
}

model DeliveryRecord {
  id          String         @id @default(cuid())
  clipId      String
  userId      String
  recipientId String
  method      DeliveryMethod
  status      DeliveryStatus @default(pending)
  sentAt      DateTime?
  error       String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  clip ClipRecord @relation(fields: [clipId], references: [id], onDelete: Cascade)
  user User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([clipId])
  @@index([userId, status])
}

model GuildConfig {
  id            String   @id @default(cuid())
  guildId       String   @unique
  feedChannelId String?
  adminRoleId   String?
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([guildId])
}
